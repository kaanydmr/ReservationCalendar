@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Welcome to the Classroom Reservation System</h2>
                </div>
                <div class="card-body">
                    <p class="lead">Reserve classrooms, manage academic terms, and view schedules with ease.</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a asp-page="/Login" class="btn btn-primary w-100">Login</a>
                            }
                            else
                            {
                                <span class="btn btn-success w-100" disabled>Logged in</span>
                            }
                        </li>
                        <li class="list-group-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-page="/Calendar" class="btn btn-outline-primary w-100">View Calendar</a>
                            }
                            else
                            {
                                <button class="btn btn-outline-primary w-100" onclick="showLoginWarning()">View Calendar</button>
                            }
                        </li>
                    </ul>
                    <div id="loginWarning" class="alert alert-warning mt-3 d-none" role="alert">
                        You need to log in to view the calendar.
                    </div>
                    <script>
                        function showLoginWarning() {
                            document.getElementById('loginWarning').classList.remove('d-none');
                        }
                    </script>
                    <div class="mt-3 text-center">
                        <small class="text-muted">Need help? Contact your administrator.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


