@page "{id:int}"
@model Project.Pages.EditReservationModel

<h2>Edit Reservation</h2>

@if (Model.Reservation.Status == "Approved")
{
    <div class="alert alert-warning">
        Approved reservations cannot be edited.
    </div>
    <a asp-page="/Calendar" class="btn btn-secondary">Back to Calendar</a>
}
else
{
    <form method="post">
        <input type="hidden" asp-for="Reservation.Id" />
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Reservation.Title"></label>
            <input asp-for="Reservation.Title" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Reservation.Description"></label>
            <textarea asp-for="Reservation.Description" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="/Calendar" class="btn btn-secondary">Cancel</a>
    </form>
}