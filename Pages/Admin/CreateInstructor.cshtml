@page
@model Project.Pages.Admin.CreateInstructorModel
@{
    ViewData["Title"] = "Create Instructor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Create Instructor</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">First Name:</label>
                            <input asp-for="FirstName" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Last Name:</label>
                            <input asp-for="LastName" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email:</label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Password:</label>
                            <input asp-for="Password" type="password" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Create Instructor</button>
                    </form>
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-info mt-3">@Model.Message</div>
                    }
                </div>
            </div>
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">Instructors</h4>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var instructor in Model.Instructors)
                        {
                            <tr>
                                <td>@instructor.FirstName</td>
                                <td>@instructor.LastName</td>
                                <td>@instructor.Email</td>
                                <td>
                                    <a asp-page="/Admin/EditInstructor" asp-route-id="@instructor.Id" class="btn btn-sm btn-warning">Edit</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>