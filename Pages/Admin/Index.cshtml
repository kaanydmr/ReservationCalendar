@page
@model Project.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Admin Dashboard</h2>
        </div>
        <div class="card-body">
            <p class="lead">Welcome, admin!</p>


            <div class="mb-3">
                <a asp-page="/Calendar" class="btn btn-outline-primary w-100 text-start">View Reservation Calendar</a>
            </div>
            <div class="mb-3">
                <a asp-page="/Admin/CreateInstructor" class="btn btn-outline-primary w-100 text-start">Manage Instructors</a>
            </div>
            <div class="mb-3">
                <a asp-page="/Admin/AcademicTerms" class="btn btn-outline-primary w-100 text-start">Manage Academic Terms</a>
            </div>
            <div class="mb-3">
                <a asp-page="/Admin/CreateClassroom" class="btn btn-outline-primary w-100 text-start">Add Classroom</a>
            </div>
            <div class="mb-3">
                <a asp-page="/Admin/ClassroomList" class="btn btn-outline-primary w-100 text-start">View Classrooms</a>
            </div>
            <div class="mb-3">
                <a asp-page="/Admin/Email" class="btn btn-outline-primary w-100 text-start">View Mails</a>
            </div>
            <div class="mb-3">
                <a asp-page="/Admin/Logs" class="btn btn-outline-primary w-100 text-start">View System Logs</a>
            </div>
            <div class="mb-3">
                <form method="post" asp-page="/Logout" class="d-inline w-100">
                    <button type="submit" class="btn btn-outline-danger w-100 text-start">Logout</button>
                </form>
            </div>
            
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success mt-3">@TempData["Message"]</div>
            }
        </div>
    </div>
</div>