@page
@model Project.Pages.Instructor.IndexModel
@{
    ViewData["Title"] = "Instructor Dashboard";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Welcome, Instructor!</h2>
                </div>
                <div class="card-body">
                    <p class="lead">This is the instructor dashboard.</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a asp-page="/Calendar" class="text-decoration-none">View Reservation Calendar/ Make Reservations</a>
                        </li>
                        <li class="list-group-item">
                            <a asp-page="/Instructor/Email" class="text-decoration-none">Mails</a>
                        </li>
                        <li class="list-group-item">
                            <a asp-page="/Instructor/Feedback" class="text-decoration-none">Send Feedback</a>
                        <li class="list-group-item">
                            <form method="post" asp-page="/Logout" class="d-inline">
                                <button type="submit" class="btn btn-link text-danger p-0 text-decoration-none">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>